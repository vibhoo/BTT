<%= link_to " Logout ", destroy_user_session_path, :method => :delete%>
<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Availbility</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.availbility %></td>
        <%if book.availbility > 0 %>
          <% unless current_user.books.include?(book) %>
            <td><%= link_to 'Issue book',issue_book_path(book), class: 'btn btn-mini' %></td>
          <% else %>
            <td><%= link_to 'Return book',return_book_path(book), class: 'btn btn-mini' %></td>
          <% end %>
        <% else %>
          <td>Out Of Stock</td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

